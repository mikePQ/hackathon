<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="searchPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cos.sie.popsulo.app.controller.SearchPanelController">
    <children>
        <Label text="%labels.search" />
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
            <children>
                <TextField fx:id="searchTextField" prefHeight="31.0" prefWidth="420.0" />
                <CheckBox fx:id="onlyLocalCheckBox" mnemonicParsing="false" prefWidth="180.0" text="CheckBox" />
            </children>
        </HBox>
        <TableView fx:id="results" onMousePressed="#onResultClicked">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="title" text="%labels.resultsTable.title" />
                <TableColumn fx:id="author" text="%labels.resultsTable.author" />
                <TableColumn fx:id="miniature" text="%labels.resultsTable.miniature" />
                <TableColumn fx:id="isCached" text="%labels.resultsTable.isCached" />
            </columns>
        </TableView>
    </children>
</VBox>
